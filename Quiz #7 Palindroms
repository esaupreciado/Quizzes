#include <iostream>
#include <string>
using namespace std;


bool isPalindrome(string x){
        if(x== string(x.rbegin(), x.rend()))
            return true;
      else
    return false;
  }

int main(){
    string a;
    cout << "Write a Palindrome " << endl;
    cin>>a;
    bool y= isPalindrome(a);
        if (y == true) {
          cout << "¡That's correct!" << endl;
        }
        else  {
          cout << "¡Sorry, that's incorrect!" << endl;
        }
    return 0;
}
